
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
<%= stylesheet_link_tag "home", "data-turbo-track": "reload" %>

<section class="vh-100 bg-light d-flex">
  <div class="container-fluid h-custom d-flex flex-column align-items-center justify-content-center">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
            <button type="button" class="btn btn-primary btn-floating mx-1">
              <i class="fab fa-facebook-f"></i>
            </button>

            <button type="button" class="btn btn-primary btn-floating mx-1">
              <i class="fab fa-twitter"></i>
            </button>

            <button type="button" class="btn btn-primary btn-floating mx-1">
              <i class="fab fa-linkedin-in"></i>
            </button>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
             <!-- <input type="email" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter a valid email address" /> -->
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg", placeholder:"Enter your email address here" %>
            <label class="form-label" for="form3Example3">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
              <%= f.password_field :password, autofocus: true, autocomplete: "password", class:"form-control form-control-lg", placeholder:"Enter your password here" %>
            <label class="form-label" for="form3Example4">Password</label>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <%= f.check_box :remember_me, class:'form-check-input me-2' %>
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
                  <%= f.submit "Log in", class:"btn btn-primary btn-lg", style:'padding-left: 2.5rem; padding-right: 2.5rem;' %>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?  <%= link_to 'Register', new_user_registration_path, class:'link-danger' %></p>
               
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<% end %>